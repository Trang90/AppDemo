<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="12dp"
    android:layout_margin="8dp"
    app:strokeColor="@color/prime_50"
    app:strokeWidth="1dp"
    app:rippleColor="@color/prime_200">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/ten_item_gio_hang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:minWidth="100dp"
        android:paddingEnd="4dp"
        android:text="Bánh Sisi Mix Brand Sisi Mix Brand"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button_xoa_gio_hang"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/anh_item_gio_hang"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/anh_item_gio_hang"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/khoi_luong_item_gio_hang"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_height="0dp"
        android:text="Khối Lượng: 220g"
        app:layout_constraintStart_toEndOf="@id/anh_item_gio_hang"
        app:layout_constraintTop_toBottomOf="@id/ten_item_gio_hang" />

    <TextView
        android:id="@+id/gia_item_gio_hang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fa3223"
        android:text="50.000"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/anh_item_gio_hang"
        app:layout_constraintTop_toBottomOf="@id/khoi_luong_item_gio_hang" />

    <ImageButton
        android:id="@+id/button_giam"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/anh_item_gio_hang"
        app:layout_constraintTop_toBottomOf="@+id/gia_item_gio_hang"
        app:layout_constraintVertical_bias="0.571" />
    <!--android:src="@drawable/minus"-->

    <TextView
        android:id="@+id/so_luong_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_giam"
        app:layout_constraintTop_toBottomOf="@+id/gia_item_gio_hang"
        app:layout_constraintVertical_bias="0.52" />

    <ImageButton
        android:id="@+id/button_tang"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/so_luong_item"
        app:layout_constraintTop_toBottomOf="@+id/gia_item_gio_hang"
        app:layout_constraintVertical_bias="0.52" />
    <!--android:src="@drawable/add"-->

    <ImageButton
        android:id="@+id/button_xoa_gio_hang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:src="@drawable/cancel_64"-->



<!--  //TODO SALE-->
    <TextView
        android:id="@+id/giakhuyenmai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="40.000"
        android:visibility="invisible"
        android:textColor="#fa3223"
        app:layout_constraintStart_toEndOf="@+id/gia_item_gio_hang"
        app:layout_constraintTop_toBottomOf="@+id/khoi_luong_item_gio_hang" />


</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>